{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "import", "prettier"],
    "extends": [
      "next/core-web-vitals",
      "plugin:prettier/recommended",
      "plugin:import/recommended"
  ],
  "rules": {
    "linebreak-style": 0,
    "import/no-dynamic-require": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "global-require": 0,
    "import/no-extraneous-dependencies": 0,
    "jsx-quotes": ["error", "prefer-single"],
    "react/jsx-props-no-spreading": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": [
      1,
      { "extensions": [".js", ".jsx", ".ts", ".tsx"] }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["sibling", "parent", "index"],
          "type",
          "unknown"
        ],
        "pathGroups": [
          { "pattern": "next", "group": "builtin", "position": "before" },
          { "pattern": "next/*", "group": "builtin", "position": "before" },
          { "pattern": "react", "group": "builtin", "position": "before" },
          { "pattern": "react-dom", "group": "builtin", "position": "before" },
  
          { "pattern": "@tanstack/react-query", "group": "external","position": "before" },
          { "pattern": "dayjs", "group": "external","position": "before" },
          { "pattern": "@mui/material", "group": "external" ,"position": "before"},
          { "pattern": "@emotion/react", "group": "external" ,"position": "before"},
          { "pattern": "react-beautiful-dnd", "group": "external" ,"position": "before"},
  
          { "pattern": "~/pages/**", "group": "unknown"},
          { "pattern": "~/hooks/**", "group": "unknown"},
          { "pattern": "~/queries/**", "group": "unknown"},
          { "pattern": "~/components/**", "group": "unknown"},
          { "pattern": "~/stores/**", "group": "unknown"},
          { "pattern": "~/apis/**", "group": "unknown"},
          { "pattern": "~/utils/**", "group": "unknown"},
          { "pattern": "~/types/**", "group": "unknown"},
          { "pattern": "~/constants/**", "group": "unknown"},
          { "pattern": "~/assets/**", "group": "unknown"},
          { "pattern": "~/styles/**", "group": "unknown"},
          { "pattern": "~/src/**", "group": "unknown", "position": "after"},
          { "pattern": "~/**", "group": "unknown", "position": "after"}
        ],
        "pathGroupsExcludedImportTypes": ["react", "react-dom"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx", ".js"]
    },
    "import/resolver": {
      "typescript": "./tsconfig.json"
    }
  }

}
